{
  "name": "draw4fun-server",
  "private": true,
  "version": "0.0.0",
  "watch": {
    "build-client": {
      "patterns": [
        "../client/src"
      ],
      "extensions": "ts,svelte"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "build-client": "cd ../client && npm run build",
    "start-dev-server": "tsc-watch --onSuccess \"ts-node dist/server/main.js\"",
    "dev": "concurrently --kill-others \"npm run start-dev-server\" \"npm run watch\"",
    "start": "NODE_ENV=production ts-node dist/server/main.js",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^18.11.18",
    "concurrently": "^8.2.2",
    "npm-watch": "^0.11.0",
    "tsc-watch": "^6.0.4",
    "tsx": "^4.7.1",
    "vite": "^4.0.4"
  },
  "type": "module",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite-express": "*"
  }
}
